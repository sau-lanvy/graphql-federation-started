{
  "name": "graph-gateway",
  "version": "1.0.0",
  "description": "graph gateway",
  "main": "src/index.ts",
  "scripts": {
    "build": "rimraf dist && tsc && copyfiles *.html dist/",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate": "npm run codegen",
    "codegen": "graphql-codegen --config ./codegen.yml",
    "audit": "better-npm-audit audit",
    "eslint:fix": "eslint . --fix --ignore-path .gitignore --ext .js,.ts",
    "eslint": "eslint . --ext .js,.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/federation": "^0.36.0",
    "@apollo/gateway": "^2.0.5",
    "@opentelemetry/api": "1.0",
    "@opentelemetry/core": "1.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.29.2",
    "@opentelemetry/exporter-zipkin": "^0.22.0",
    "@opentelemetry/instrumentation": "^0.27.0",
    "@opentelemetry/instrumentation-express": "^0.28.0",
    "@opentelemetry/instrumentation-graphql": "^0.27.4",
    "@opentelemetry/instrumentation-http": "^0.27.0",
    "@opentelemetry/node": "^0.22.0",
    "@opentelemetry/resources": "1.0",
    "@opentelemetry/sdk-trace-base": "1.0",
    "@opentelemetry/sdk-trace-node": "1.0",
    "@types/node": "^16.11.10",
    "apollo-server": "^3.9.0",
    "apollo-server-env": "^4.2.1",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "graphql": "^16.5.0",
    "graphql-depth-limit": "^1.1.0",
    "helmet": "^4.6.0",
    "lodash": "^4.17.21",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.2",
    "winston": "^3.8.0"
  },
  "devDependencies": {
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/lodash": "^4.14.182",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "concurrently": "^7.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.5.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2"
  }
}
